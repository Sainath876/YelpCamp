<% layout('layouts/boilerplate') -%>
<h1 class="text-center">New Campground</h1>
<div class="col-md-6 offset-3">
    <form action="/campgrounds" method="POST">
        <div class="mt-3">
            <label class="label" for="title">Enter Title: </label>
            <input class="form-control" type="text" id="title" name="campground[title]">
        </div>
        <div class="mt-3">
            <label class="label" for="location">Enter Location: </label>
            <input class="form-control" type="text" id="location" name="campground[location]">
        </div>
        <div class="mt-3">
            <label class="label" for="image">Enter image url: </label>
            <input class="form-control" type="text" id="image" name="campground[image]">
        </div>
        <div class="mt-3 input-group mb-3">
            <span class="input-group-text">$</span>
            <input type="text" class="form-control" name="campground[price]" placeholder="0.00"
                aria-label="Amount (to the nearest dollar)">
        </div>
        <div class="input-group">
            <span class="input-group-text">Description</span>
            <textarea class="form-control" name="campground[description]" aria-label="With textarea"></textarea>
        </div>
        <button class="btn btn-success mt-3">Submit</button>
    </form>
    <a href="/campgrounds">Back to camps</a>
</div>