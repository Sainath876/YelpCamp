<% layout('layouts/boilerplate') -%>
<h1>Campgrounds</h1>
<div class="mt-3">
    <ul class="mt-3">
        <% for(let campground of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= campground.images[0].url %>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %></h5>
                        <p class="card-text"><%= campground.description %></p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View
                            <%= campground.location %> </a>
                        <p class="card-text text-muted mt-3"> &#x1f4cc; <%= campground.location %></p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </ul>
</div>